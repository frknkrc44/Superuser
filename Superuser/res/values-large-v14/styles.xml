<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="RequestThemeLight" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="bottomButtonBar">@color/background_dark</item>
        <item name="bottomButtonBarText">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="RequestThemeDark" parent="@android:style/Theme.Holo.Dialog">
        <item name="bottomButtonBar">@null</item>
        <item name="bottomButtonBarText">?android:attr/textColorPrimary</item>
    </style>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseLargeTheme" parent="AndroidTheme">
        <item name="listPreferredItemPaddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="listPreferredItemPaddingRight">?android:attr/listPreferredItemPaddingRight</item>
    </style>

    <style name="AppBaseDarkLargeTheme" parent="AndroidDarkTheme">
        <item name="listPreferredItemPaddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="listPreferredItemPaddingRight">?android:attr/listPreferredItemPaddingRight</item>
    </style>

</resources>
